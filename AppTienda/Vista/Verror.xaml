<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppTienda.Vista.Verror"
             NavigationPage.HasNavigationBar="False"
             >
    <StackLayout BackgroundColor="#dbd4f6">
        <Label Text="Hubo un error" HorizontalOptions="Center" VerticalOptions="Center"
                   FontSize="30" Margin="0,100"/>

        <Image Source="error.png"  VerticalOptions="Center" HorizontalOptions="Center" HeightRequest="120"/>

        <Button Text="Volver a intentar" CornerRadius="20" Margin="20,100" BackgroundColor="#262531" TextColor="#dbd4f6" HeightRequest="80"
                Command="{Binding Regresarcommand}"/>
    </StackLayout>
</ContentPage>